<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />
            <solid android:color="@color/style_color_accent"/>
            <stroke android:width="0.5px" android:color="@color/style_color_accent"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/style_color_primary"/>
            <stroke android:width="0.5px" android:color="@color/style_color_primary"/>
        </shape>
    </item>
</selector>